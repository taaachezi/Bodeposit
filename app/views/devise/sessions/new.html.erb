<div class="container">
    <div class="row">
      <div class="row justify-content-center col-12">
        <h2>ログイン</h2>
      </div>
      <div class="col-md-8 offset-md-2">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :ユーザ名 %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "email", placeholder: "ユーザ名", class: "col-12" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "6文字以上", class: "col-12" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :"次回から自動ログイン（1週間経過すると再度ログインする必要があります）" %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-outline-primary col-12" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>
