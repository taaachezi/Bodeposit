<div class="container">
  <div class="row">
    <div class="row justify-content-center col-12">
      <h2>新規登録</h2>
    </div>
    <div class="col-md-8 offset-2">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :ユーザー名 %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザ名", class: "col-12" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com", class: "col-12" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上", class: "col-12" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（再確認） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "6文字以上", class: "col-12" %>
        </div>

        <div class="field">
          <%= f.label :性別 %><br />
          <%= f.radio_button :sex, "true" %>男性
          <%= f.radio_button :sex, "false" %>女性
        </div>


        <div class="field">
          <%= f.label :身長（cm）%>
          <em>小数点四捨五入 例:173.5cm -> 174cm</em><br />
          <%= f.text_field :height, autofocus: true, autocomplete: "height", placeholder: "173,5 => 174", class: "col-11" %>cm
        </div>

        <div class="field">
          <%= f.label :体重（kg）%>
          <em>小数点四捨五入 例:69.5kg -> 70kg</em><br />
          <%= f.text_field :weight, autofocus: true, autocomplete: "weight", placeholder: "69,5 => 70", class: "col-11" %>kg
        </div>

        <div class="field">
          <%= f.label :年齢 %><br />
          <%= f.text_field :age, autofocus: true, autocomplete: "age", class: "col-11" %>歳
        </div>

        <div class="field">
          <%= f.label :運動頻度（意識的に運動している日週） %><br />
          <%= f.radio_button :level, "多" %>多(週5~7日)
          <%= f.radio_button :level, "普通" %>普通(週2~4日)
          <%= f.radio_button :level, "少" %>少(週0~1日)
        </div>

        <div class="actions">
          <%= f.submit "登録する", class: "btn btn-outline-success col-12 mb-3" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
