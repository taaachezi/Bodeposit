<div class="container">
	<div class="d-flex justify-content-center mb-3">
		<h3>ジャンル登録</h3>
	</div>
	<div class="row justify-content-center">
		<div id="genre_new" class="genre__form">
			<%= form_for @addgenre, url: genres_path, method: :post, remote: true do |f| %>
				<%= f.label :ジャンル名 %>
				<%= f.text_field :name, autofocus: true, placeholder: "ジャンル名を入力" %>
				<%= f.submit "登録", class: "btn btn-outline-primary" %>
			<% end %>
		</div>
	</div>

	<div class="d-flex justify-content-center mt-5">
		<h3>ジャンル一覧</h3>
	</div>
	<div class="row justify-content-center">
		<div class="genre_index">
			<div class="col-12" id="genre_index__genres">
			  <%= render "index", genres: @genres %>
			</div>
		</div>
	</div>
</div>
