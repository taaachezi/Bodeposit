<div class="container">
	<div class="d-flex justify-content-center mb-3">
		<h3>ジャンル登録</h3>
	</div>
	<div class="row justify-content-center">
		<div id="genre_new" class="genre__form col-md-offset-4 col-md-8">
			<%= render "genre_form", addgenre: @addgenre %>
		</div>
	</div>

	<div class="d-flex justify-content-center mt-5">
		<h3>ジャンル一覧</h3>
	</div>
	<div class="row justify-content-center">
		<div class="genre_index col-md-offset-4 col-md-8">
			<% if current_user.genres.count == 0 %>
				<p>ジャンルを追加してください</p>
			<% end %>
			<div class="col-12" id="genre_index__genres">
			  <%= render "index", genres: @genres %>
			</div>
		</div>
	</div>
</div>
